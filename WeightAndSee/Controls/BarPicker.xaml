<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:controls="clr-namespace:WeightAndSee.Controls"
             xmlns:models="clr-namespace:WeightAndSee.Models"
             xmlns:viewmodels="clr-namespace:WeightAndSee.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:Class="WeightAndSee.Controls.BarPicker"
             x:DataType="viewmodels:MainPageViewModel"
             x:Name="MainPageContent">
    <ScrollView>
        <Grid RowSpacing="6" ColumnSpacing="6" Padding="10" Margin="10" VerticalOptions="Start" HorizontalOptions="Center">
            <Grid.RowDefinitions>
                <RowDefinition Height="80" /> <!--Row for bar type -->
                <RowDefinition Height="80"/> <!-- Row for radio buttons -->
                <RowDefinition Height="80" /><!-- Row for for Bar weight entry -->
                <RowDefinition Height="80" /><!-- Row for desired bar weight entry -->
                <RowDefinition Height="260" /><!-- Row for barbell -->
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0" HorizontalOptions="Start" 
                   TextColor="LightSlateGray"
                   Text="Bar Type:"/>
            <RadioButton Grid.Row="0" Grid.Column="0" HorizontalOptions="Center"
                         VerticalOptions="Start"
                          Content="{x:Static models:BarTypes.Barbell}"
                         TextColor="LightSlateGray"
                         BorderColor="LightSlateGray"
                         GroupName="BarType"
                         IsChecked="{Binding IsBarbellChecked, Mode=TwoWay}">
                <RadioButton.Behaviors>
                    <toolkit:EventToCommandBehavior 
                        EventName="CheckedChanged"
                        Command="{Binding BindingContext.SetBarTypeCommand, Source={x:Reference MainPageContent}}"
                        CommandParameter="{x:Static models:BarTypes.Barbell}"/>
                </RadioButton.Behaviors>
            </RadioButton>
            <RadioButton Grid.Row="0" Grid.Column="0" HorizontalOptions="End"
                         Content="{x:Static models:BarTypes.Dumbbell}"
                         TextColor="LightSlateGray"
                         GroupName="BarType"
                         IsChecked="{Binding IsDumbbellChecked, Mode=TwoWay}">
                <RadioButton.Behaviors>
                    <toolkit:EventToCommandBehavior 
                        EventName="CheckedChanged"
                        Command="{Binding BindingContext.SetBarTypeCommand, Source={x:Reference MainPageContent}}"
                        CommandParameter="{x:Static models:BarTypes.Dumbbell}"/>
                </RadioButton.Behaviors>
            </RadioButton>

            <Entry Grid.Row="2" Grid.Column="0"
                   Keyboard="Numeric"
                   FontSize="22"
                   PlaceholderColor="LightSlateGray"
                   TextColor="LightSlateGray"
                   Placeholder="What does your bar weigh?"
                   Text="{Binding BarWeightText, Mode=TwoWay}" 
                   BackgroundColor="#FAFAFA"/>

            <Entry Grid.Row="3" Grid.Column="0"
                   Keyboard="Numeric"
                   FontSize="22"
                   PlaceholderColor="LightSlateGray"
                   TextColor="LightSlateGray"
                   Placeholder="How much weight do you want on your bar?"
                   Text="{Binding DesiredWeightText, Mode=TwoWay}" 
                   BackgroundColor="#FAFAFA"/>

            <ImageButton Grid.Row="4" Grid.Column="0"
                         Source="add_plate_icon.png"
                         Command="{Binding AddBarCommand}" />
        </Grid>
    </ScrollView>
</ContentView>